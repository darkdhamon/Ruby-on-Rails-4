<div class="row">
<div class="well col-sm-12">
  <div class="media">
    <img src="<%= @question.gravatar %>" class="mr-3" size="100x100">
    <div class="media-body">
      <h5 class="mt-0"><%= @question.email %> asked:</h5>
      <span class="card-subtitle"><%= time_ago_in_words @question.created_at %> ago</span>
      <p>
        <%= @question.body %>
      </p>
    </div>
  </div>
</div>
</div>

<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#answer ">Answer Question</button>
  </div>
  <%= render "shared/new_answer_form" %>
  <div class="col-sm-10 offset-sm-1">
    <% @answers.each do |a| %>
    <div class="media">
      <img src="<%= a.gravatar %>" class="mr-3" size="100x100">
      <div class="media-body">
        <h5 class="mt-0"><%= a.email %> asked:</h5>
        <span class="card-subtitle"><%= time_ago_in_words a.created_at %> ago</span>
        <p>
          <%= a.body %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
</div>