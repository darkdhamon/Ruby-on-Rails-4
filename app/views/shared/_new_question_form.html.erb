<div id="question" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <%= form_for :question, url:"/questions" do%>
        <div class="modal-header">
          <h5 class="modal-title">Ask A Question</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="container-fluid">
            <div class="row form-group">
              <div class="col-sm-2">
                <label for="questionEmail">Email</label>

              </div>
              <div class="col-sm-10">
                <input type="email" class="form-control" id="questionEmail" placeholder="user@email.com" required>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-sm-2"><label for="questionQuestion">Question</label></div>
              <div class="col-sm-10">
                <textarea class="form-control" id="questionQuestion" placeholder="What would you like to know?" required></textarea>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Submit Question</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
        <% end %>
    </div>
  </div>
</div>
